<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
	android:orientation="horizontal"
	android:foreground="?android:attr/selectableItemBackground"
	android:paddingTop="@dimen/rniconactionsheet_item_vertical_padding"
	android:paddingStart="@dimen/rniconactionsheet_item_horizontal_padding"
	android:paddingLeft="@dimen/rniconactionsheet_item_horizontal_padding"
	android:paddingEnd="@dimen/rniconactionsheet_item_horizontal_padding"
	android:paddingRight="@dimen/rniconactionsheet_item_horizontal_padding"
	android:paddingBottom="@dimen/rniconactionsheet_item_vertical_padding" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/rniconactionsheet_item_image_size"
        android:layout_height="@dimen/rniconactionsheet_item_image_size"
		android:layout_marginRight="@dimen/rniconactionsheet_item_image_margin"
		android:tint="@color/rniconactionsheet_image_color" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:text="Sample Text"
		android:textColor="@color/rniconactionsheet_text_color"
		android:textSize="@dimen/rniconactionsheet_textsize"
        android:singleLine="true" />

</LinearLayout>